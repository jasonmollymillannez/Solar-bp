# Environment configuration for Blockplanner bp (Ghana-only)

NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000

# PostgreSQL connection (docker-compose example)
DATABASE_URL=postgres://bp_user:password@db:5432/blockplanner

# JWT & auth
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CSRF
CSRF_SECRET=csrf_secret_placeholder

# Mobile Money (MTN Momo sandbox placeholder)
MTN_MOMO_API_URL=https://sandbox.mtn.com
MTN_MOMO_API_KEY=PLACEHOLDER_TO_SET
MTN_MOMO_USER_ID=PLACEHOLDER
MOBILE_MONEY_PAYOUT_ENABLED=false

# Business config
REFERRAL_BONUS_PERCENT=5
DAILY_PAYOUT_CRON=0 0 * * *

# Email provider
EMAIL_PROVIDER_API_KEY=PLACEHOLDER
EMAIL_FROM=no-reply@blockplanner.gh

# Note: To enable Mobile Money payouts set MOBILE_MONEY_PAYOUT_ENABLED=true and add MTN_MOMO_API_KEY and MTN_MOMO_USER_ID above.
